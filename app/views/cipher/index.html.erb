<h1>Create your Caesar cipher</h1>

<% if @current_user %>
  Logged in as <%= @current_user.email %>.
  <%= link_to 'Log Out', logout_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or
  <%= link_to 'Log In', login_path %>
<% end %>
<p id=”notice”><%= notice %></p>

<% if @current_user %>

  <hr>
  <%= form_for @cipher_form, url: { action: :create } do |f| %>
    <%= f.label :text %>
    <%= f.text_area :text %>
    <%= f.label :shift %>
    <%= f.number_field :shift %>
    <%= f.submit "Create" %>
  <% end %>


  <%- if @cipher_texts %>
    <%- @cipher_texts.each do |cipher| %>
      <p>
      <strong><%= cipher.text %></strong>
      <%= link_to 'Enter to decrypt text', cipher_path(cipher) %>
      </p>

    <%- end %>
  <%- end%>
<%- end %>
